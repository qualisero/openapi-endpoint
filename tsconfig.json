{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "./docs/",
    "name": "Vue OpenAPI Query Documentation",
    "hideGenerator": true,
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotDocumented": false,
    "sort": ["source-order"],
    "categorizeByGroup": false,
    "defaultCategory": "Other",
    "categoryOrder": ["Functions", "Interfaces", "Type Aliases", "Variables", "Other"],
    "kindSortOrder": ["Variable", "Function", "Interface", "TypeAlias"],
    "validation": {
      "invalidLink": true,
      "notExported": false
    },
    "treatWarningsAsErrors": false,
    "intentionallyNotExported": [
      "QQueryOptions",
      "QMutationOptions",
      "EndpointQueryReturn",
      "EndpointMutationReturn",
      "OperationInfo",
      "useEndpointQuery",
      "useEndpointMutation",
      "Operations",
      "GetPathParameters",
      "GetResponseData",
      "GetRequestBody",
      "QMutationVars",
      "IsQueryOperation",
      "OpenApiHelpers"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
