{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["./src/index.ts", "./docs/manual/*.md"],
    "out": "./docs/",
    "name": "Vue OpenAPI Query Documentation",
    "hideGenerator": true,
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "exclude": ["**/node_modules/**", "**/dist/**", "**/tests/**", "**/*.test.ts", "**/*.spec.ts"],
    "excludeNotDocumented": false,
    "sort": ["source-order"],
    "categorizeByGroup": true,
    "defaultCategory": "Other",
    "categoryOrder": [
      "Guides",
      "Setup",
      "Queries",
      "Mutations",
      "Cache",
      "Types",
      "Functions",
      "Interfaces",
      "Variables"
    ],
    "kindSortOrder": ["Variable", "Function", "Interface", "TypeAlias"],
    "validation": {
      "invalidLink": true,
      "notExported": false
    },
    "treatWarningsAsErrors": false,
    "intentionallyNotExported": ["OperationInfo", "useEndpointQuery", "useEndpointMutation", "OpenApiHelpers"],
    "readme": "none"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "docs/manual"]
}
