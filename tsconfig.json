{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "./docs/",
    "name": "Vue OpenAPI Query Documentation",
    "hideGenerator": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
